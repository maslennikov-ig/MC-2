{
  "name": "@megacampus/course-gen-platform",
  "version": "0.26.29",
  "private": true,
  "type": "module",
  "description": "Main API server for MegaCampusAI course generation platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "dev:worker": "tsx watch src/orchestrator/worker-entrypoint.ts",
    "dev:worker:safe": "pkill -f 'worker-entrypoint' 2>/dev/null; sleep 1; tsx watch src/orchestrator/worker-entrypoint.ts",
    "kill:workers": "pkill -f 'worker-entrypoint' 2>/dev/null && echo 'Workers killed' || echo 'No workers running'",
    "build": "tsc -p tsconfig.json",
    "generate:config-seed": "tsx src/build/generate-config-seed.ts",
    "prebuild": "tsx src/build/generate-config-seed.ts",
    "start": "node dist/server/index.js",
    "start:worker": "node dist/orchestrator/worker-entrypoint.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:contract": "vitest run tests/contract",
    "test:integration": "vitest run tests/integration",
    "test:fixtures": "vitest run tests/fixtures/seed-database.test.ts",
    "test:rls": "cd ../.. && supabase test db --workdir packages/course-gen-platform",
    "test:all": "pnpm test && pnpm test:rls",
    "seed": "tsx tests/fixtures/seed-database.ts",
    "seed:clean": "tsx tests/fixtures/seed-database.ts clean",
    "verify:qdrant": "tsx tools/verify/verify-qdrant-connection.ts",
    "qdrant:create-collection": "tsx src/shared/qdrant/create-collection.ts",
    "cleanup:docling-cache": "tsx tools/maintenance/cleanup-docling-cache.ts",
    "lint": "eslint src --max-warnings=300",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@megacampus/shared-logger": "workspace:*",
    "@bull-board/api": "^5.14.0",
    "@bull-board/express": "^5.14.0",
    "@langchain/core": "^1.1.5",
    "@langchain/langgraph": "^1.0.5",
    "@langchain/openai": "^1.2.0",
    "@langchain/textsplitters": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@qdrant/js-client-rest": "^1.16.2",
    "@supabase/supabase-js": "^2.87.2",
    "@trpc/server": "^11.8.0",
    "any-ascii": "^0.3",
    "archiver": "^7",
    "axios": "^1.7",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.66.0",
    "cors": "^2.8.5",
    "dompurify": "^3.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fast-levenshtein": "^3.0.0",
    "fast-xml-parser": "^5.3.3",
    "form-data": "^4",
    "franc-min": "^6.2.0",
    "ioredis": "^5.8.2",
    "jsdom": "^27.3.0",
    "jsonrepair": "^3.13.1",
    "krippendorff": "^0.1.0",
    "markdownlint": "^0.40.0",
    "nanoid": "^5.1.6",
    "openai": "^6.13.0",
    "p-limit": "^7.2.0",
    "pino": "^9.6.0",
    "snowball-stemmers": "^0.6.0",
    "strip-ansi": "^7.1.2",
    "tiktoken": "^1.0.22",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@trpc/client": "^11.8.0",
    "@types/archiver": "^7.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/fast-levenshtein": "^0.0.4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.16.0",
    "@types/tar": "^6.1.13",
    "js-yaml": "^4.1.1",
    "json5": "^2.2.3",
    "nock": "^14.0.10",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.3",
    "supabase": "^2.67.1",
    "tar": "^7.5.2",
    "tsx": "^4.21.0",
    "vitest": "^4.0.15"
  }
}
